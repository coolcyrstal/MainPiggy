<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle11"
    android:orientation="vertical"
    tools:context="com.example.topza.piggy.Balance">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/group11" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="THB"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextCountMoneyFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:freezesText="true"
            android:text="5.0"
            android:textColor="#fff"
            android:textSize="60dp" />

    </LinearLayout>


    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/SliderFragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ImageSlider_Size"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:layout_width="@dimen/ImageSlider_Size"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/shadow" />

    <TextView
        android:id="@+id/BottomTextFragment"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:freezesText="true"
        android:text="Click to send THB 1.00 to Piggy"
        android:textColor="#9fffffff"
        android:textSize="20dp"
        android:layout_weight="1"
        />


</LinearLayout>
