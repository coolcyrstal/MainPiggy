<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:passcodeView="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rectangle11"
    tools:context="com.example.topza.piggy.Password">

    <TextView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@drawable/rectangle12"
        android:gravity="center"
        android:text="Create Passcode"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignBottom="@id/topbar"
        android:background="#0f000000" />

    <com.mhk.android.passcodeview.PasscodeView
        android:id="@+id/passcode_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        passcodeView:numDigits="4"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        passcodeView:digitColorFilled="#FFC107"
        />

</RelativeLayout>
